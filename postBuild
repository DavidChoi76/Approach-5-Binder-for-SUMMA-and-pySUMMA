#!/usr/bin/env bash
## clone pysumma and summa and switch to develop branch
git clone -b develop https://github.com/arbennett/pysumma.git; cd pysumma; git push origin arbennett:feature/update_summa; pip install .

#cd ..; git clone -b develop https://github.com/NCAR/summa.git
