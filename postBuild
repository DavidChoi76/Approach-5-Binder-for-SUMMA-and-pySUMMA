source activate pysumma
python -m ipykernel install --user --name pysumma
jupyter labextension install @pyviz/jupyterlab_pyviz

git clone https://github.com/UW-Hydro/pysumma.git \
  && cd pysumma && git checkout develop && pip install .
  
export NCDF_PATH=/usr
export LAPK_PATH=/usr

git clone https://github.com/NCAR/summa.git \
  && cd summa && git checkout develop \
  && cd build && sed -i 's/##INCLUDES =/##INCLUDES = -I$(NCDF_PATH)\/include/g' Makefile \
  && sed -i 's/##LIBRARIES =/##LIBRARIES = -L$(NCDF_PATH)\/lib -lnetcdff -L$(LAPK_PATH)\/lib -llapack -lblas -latlas/g' Makefile

cd summa && git checkout develop
export F_MASTER=/home/jovyan/summa
export FC=gfortran
export FC_EXE=/usr/bin/gfortran-6
export FC_ENV=gfortran-6-travis
export INCLUDES='-I/usr/include -I/usr/include'
export LIBRARIES='-L/usr/lib -lnetcdff -L/usr/lib -lblas -llapack'
make -f ${F_MASTER}/build/Makefile
